{
  "name": "twitch_pip",
  "version": "0.2.1",
  "description": "",
  "main": "app.js",
  "scripts": {
    "dev": "(tsc -b) && (electron app.js)",
    "test": "(tsc -b) && (electron app.js) && (exit 1)",
    "build:osx": "build --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kewool/Isekaidol_twitch_pip.git"
  },
  "author": "kewool",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kewool/Isekaidol_twitch_pip/issues"
  },
  "homepage": "https://github.com/kewool/Isekaidol_twitch_pip#readme",
  "dependencies": {
    "@twurple/api": "^5.0.19",
    "@twurple/auth": "^5.0.19",
    "@twurple/auth-electron": "^5.0.19",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "path": "^0.12.7",
    "twitch-m3u8": "^1.1.5"
  },
  "devDependencies": {
    "electron": "^18.0.2",
    "electron-builder": "^23.3.3",
    "electron-log": "^4.4.6",
    "electron-prebuilt": "^1.4.13",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "rmagur1203",
        "repo": "twitch_pip"
      }
    ],
    "productName": "Twitch PIP",
    "appId": "com.rmagur1203.twitchpip",
    "asar": true,
    "protocols": {
      "name": "Twitch PIP",
      "schemes": [
        "Twitch PIP"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "title": "Twitch PIP",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "트위치 PIP",
      "deleteAppDataOnUninstall": true,
      "perMachine": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
